<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="cleverpush" translate="label" sortOrder="10">
            <label>CleverPush</label>
        </tab>
        <section id="corecleverpush" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Settings</label>
            <tab>cleverpush</tab>
            <resource>Cleverpush_WebPush::cleverpush_settings</resource>
            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Settings</label>

                <field id="channel_id" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Channel ID</label>
                    <comment>CleverPush Channel ID</comment>
                </field>

                <field id="script_disabled" translate="label" type="checkbox" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Script disabled</label>
                    <comment>Check this to disable the CleverPush script in your source code</comment>
                </field>
            </group>
        </section>
    </system>
</config>
